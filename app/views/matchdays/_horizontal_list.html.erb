<% matchdays.each_with_index do |matchday, index| %>
  <div class="day <%= "active" if matchday == current_matchday %>">
    <a href="<%= matchday_path(matchday) %>">
      <p>Matchday <%= index + 1 %></p>
      <p><%= matchday.start_date %> - <%= matchday.end_date %></p>
    </a>
  </div>
<% end %>
