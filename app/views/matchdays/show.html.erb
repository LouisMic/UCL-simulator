<div class="container matchday-container">
  <div class="summary mb-5">
    <%= render "horizontal_list", matchdays: @matchdays, current_matchday: @matchday %>
  </div>

  <div class="grid grid-cols-3 gap-5">
    <div class="col-span-2">
      <%= simple_form_for @matchday, url: update_predictions_matchday_path(@matchday), method: :patch do |f| %>
        <%= render "predictions", matchday: @matchday, games: @games, f:f %>
        <%= f.submit "Make your picks for matchday #{@matchday.round}", class: "btn btn-predictions" %>
      <% end %>
    </div>

    <%= render "table", clubs: @clubs %>
  </div>
</div>
